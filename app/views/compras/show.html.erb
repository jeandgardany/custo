<%- model_class = Compra -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @compra.data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_kg) %>:</strong></dt>
  <dd><%= valor_formatado(@compra.valor_kg) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_total) %>:</strong></dt>
  <dd><%= valor_formatado(@compra.valor_total) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:peso_total) %>:</strong></dt>
  <dd><%= @compra.peso_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tecido_id) %>:</strong></dt>
  <dd><%= @compra.tecido.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fornecedor_id) %>:</strong></dt>
  <dd><%= @compra.fornecedor.nome %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              compras_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_compra_path(@compra), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              compra_path(@compra),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
