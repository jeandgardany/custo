<%= form_for @compra, :html => { :class => "form-horizontal compra" } do |f| %>

  <% if @compra.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@compra.errors.count, "error") %> prohibited this compra from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @compra.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :data, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_select :data, :class => 'form-control' %>
    </div>
    <%=f.error_span(:data) %>
  </div>
  <div class="form-group">
    <%= f.label :valor_kg, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :valor_kg, :class => 'form-control' %>
    </div>
    <%=f.error_span(:valor_kg) %>
  </div>
  <div class="form-group">
    <%= f.label :peso_total, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :peso_total, :class => 'form-control' %>
    </div>
    <%=f.error_span(:peso_total) %>
  </div>
  <% @compra.valor_total = @compra.valor_kg * @compra.peso_total %>
  <div class="form-group">
    <%= f.label :valor_total, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :valor_total, :class => 'form-control' %>
    </div>
    <%=f.error_span(:valor_total) %>
  </div>
  <div class="form-group">
    <%= f.label :tecido_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :tecido_id, Tecido.all, :id, :nome, prompt: true, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tecido_id) %>
  </div>
  <div class="form-group">
    <%= f.label :fornecedor_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :fornecedor_id, Fornecedor.all, :id, :nome, prompt: true, :class => 'form-control' %>
    </div>
    <%=f.error_span(:fornecedor_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                compras_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
