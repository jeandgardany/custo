<%= form_for @despesa, :html => { :class => "form-horizontal despesa" } do |f| %>

  <% if @despesa.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@despesa.errors.count, "error") %> prohibited this despesa from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @despesa.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :corte, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :corte, :class => 'form-control' %>
    </div>
    <%=f.error_span(:corte) %>
  </div>
  <div class="form-group">
    <%= f.label :costura, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :costura, :class => 'form-control' %>
    </div>
    <%=f.error_span(:costura) %>
  </div>
  <div class="form-group">
    <%= f.label :pintura, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pintura, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pintura) %>
  </div>
  <div class="form-group">
    <%= f.label :bordado, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :bordado, :class => 'form-control' %>
    </div>
    <%=f.error_span(:bordado) %>
  </div>
  <div class="form-group">
    <%= f.label :diversos, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :diversos, :class => 'form-control' %>
    </div>
    <%=f.error_span(:diversos) %>
  </div>
  <% @despesa.total = @despesa.corte + @despesa.costura + @despesa.pintura + @despesa.bordado %>
  <div class="form-group">
    <%= f.label :total, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :total, :class => 'form-control' %>
    </div>
    <%=f.error_span(:total) %>
  </div>
  <div class="form-group">
    <%= f.label :produto_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :produto_id, Produto.all, :id, :nome, prompt: true, :class => 'form-control' %>
    </div>
    <%=f.error_span(:produto_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                despesas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
