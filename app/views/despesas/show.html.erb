<%- model_class = Despesa -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
  <dd><%= @despesa.total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:corte) %>:</strong></dt>
  <dd><%= @despesa.corte %></dd>
  <dt><strong><%= model_class.human_attribute_name(:costura) %>:</strong></dt>
  <dd><%= @despesa.costura %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pintura) %>:</strong></dt>
  <dd><%= @despesa.pintura %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bordado) %>:</strong></dt>
  <dd><%= @despesa.bordado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:diversos) %>:</strong></dt>
  <dd><%= @despesa.diversos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:produto_id) %>:</strong></dt>
  <dd><%= @despesa.produto.nome %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              despesas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_despesa_path(@despesa), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              despesa_path(@despesa),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
